@model IEnumerable<QLDL.EF.DMCang>
@{
    ViewBag.Title = "Danh mục Cảng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int a = 0;
}

<h4>Danh Mục Cảng</h4>
@Html.ActionLink("Thêm Cảng", "Create", null, new { @class = "btn btn-primary mb-1" })
<hr />
<div class="table-responsive">@using (Html.BeginForm("Index", "PhatSinh", FormMethod.Post)){
    <table class="table table-bordered table-striped" id="dataTable" width="100%">
        <thead>
            <tr>

                <th width="1%"><input type='checkbox' id='check' value='' /></th>
                <th>Mã Cảng</th>
                <th>Tên Cảng</th>
                <td>#</td>
            </tr>
        </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr id="row_@item.Id">

                    <td><input type='checkbox' name='chkId[]' id='checkbox' value="@item.Id" /></td>
                    <td>@item.MaCang</td>
                    <td>@item.TenCang</td>
                    <td>
                        <a href="/DMCang/Update/@item.Id">Sửa</a>&ensp;|&ensp;
                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                   {
                       Confirm = "Bạn có chắc là muốn xóa cảng " + item.MaCang + " không??",
                       OnComplete = "$('#row_" + @item.Id + "').remove()",
                       HttpMethod = "Delete"
                   })
                    </td>
                </tr>
                }
            </tbody>
  
        </table><div class="form-group"> <input type="submit" value="Xóa" name="delete" id="delete" class="btn btn-warning" /></div>}
</div>



