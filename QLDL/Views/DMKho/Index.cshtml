@model IEnumerable<QLDL.EF.DMKho>
@{
    ViewBag.Title = "Danh mục Kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int a = 0;
}

<!-- body -->

<h2>Danh mục Kho</h2>
@Html.ActionLink("Thêm Kho", "Create", null, new { @class = "btn btn-primary mb-1" })
<hr />
<div class="table-responsive">
    <table class="table table-bordered table-striped" id="dataTable">
        <thead>
            <tr>
                <td>#</td>
                <th>STT</th>
                <th>Mã Kho</th>
                <th>Địa chỉ</th>
                <th>Người liên hệ</th>
                <th>Số điện thoại</th>
            </tr>
        </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr id="row_@item.Id">
                    <td>
                        <a href="/DMKho/Update/@item.Id">Sửa</a>&ensp;|&ensp;
                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                   {
                       Confirm = "Bạn có chắc là muốn xóa kho "+ item.MaKho +" không??",
                       OnComplete = "$('#row_" + @item.Id + "').remove()",
                       HttpMethod = "Delete"
                   })
                    </td>
                    <td>@{a = a + 1;} @a </td>
                    <td>@item.MaKho</td>
                    <td>@item.DiaChi</td>
                    <td>@item.NguoiLienHe</td>
                    <td>@item.SoDienThoai</td>
                </tr>
                }
            </tbody>
  
        </table>
</div>



