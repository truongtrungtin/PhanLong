@model IEnumerable<QLDL.EF.DMMooc>
@{
    ViewBag.Title = "Danh mục Mooc";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int a = 0;
}

    <h2>Danh mục Mooc</h2>
@Html.ActionLink("Thêm Mooc", "Create", null, new { @class = "btn btn-primary mb-1" })
<hr />
<div class="table-responsive">
    <table class="table table-bordered table-striped" id="dataTable">
        <thead>
            <tr>

                <th style="width: 10%">STT</th>
                <th style="width: 30%">Mã Mooc</th>
                <th style="width: 30%">Biển số</th>
                <td style="width: 30%">#</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr id="row_@item.Id">

                    <td>@{a = a + 1;} @a </td>
                    <td>@item.MaMooc</td>
                    <td>@item.BienSo</td>
                    <td>
                        <a href="/DMXe/Update/@item.Id">Sửa</a>&ensp;|&ensp;
                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                   {
                       Confirm = "Bạn có chắc là muốn xóa cảng " + item.MaMooc + " không??",
                       OnComplete = "$('#row_" + @item.Id + "').remove()",
                       HttpMethod = "Delete"
                   })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>



