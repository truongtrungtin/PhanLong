@model IEnumerable<QLDL.EF.DMBill>
@{
    ViewBag.Title = "Danh mục Bill";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int a = 0;
}

<h2>Danh Mục Bill</h2>
@Html.ActionLink("Thêm Bill", "Create", null, new { @class = "btn btn-primary mb-1" })
<hr />
<div class="table-responsive">
    <table class="table table-bordered table-striped" id="dataTable">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã Bill</th>
                <th>Khách Hàng</th>
                <th>Cảng Nhận</th>
                <th>Cảng Trả</th>
                <td>#</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr id="row_@item.Id">

                    <td>@{a = a + 1;} @a </td>
                    <td><a href="/DMBill/CTBill/@item.Id"> @item.MaBill</a></td>
                    <td>@item.DMKhachHang.TenCongTy</td>
                    <td>@item.DMCang.TenCang</td>
                    <td>@item.DMCang1.TenCang</td>
                    <td>
                        <a href="/DMBill/Update/@item.Id">Sửa</a>&ensp;|&ensp;
                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                   {
                       Confirm = "Bạn có chắc là muốn xóa bill " + item.MaBill + " không??",
                       OnComplete = "$('#row_" + @item.Id + "').remove()",
                       HttpMethod = "Delete"
                   })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>



