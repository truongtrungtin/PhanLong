@model IEnumerable<QLDL.EF.DMBill>
@{
    ViewBag.Title = "Danh mục Bill";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int a = 0;
}
    <h5>Danh mục / <a href="/DMBill"> Bill </a></h5>
    <hr />
    <h4>Danh Mục Bill @Html.ActionLink("Thêm Bill", "Create", null, new { @class = "btn btn-primary mb-1" })</h4>

<div class="table-responsive">
    @using (Html.BeginForm("Index", "PhatSinh", FormMethod.Post))
    {
        <table class="table table-bordered table-striped" id="dataTable" width="100%">
            <thead>
                <tr>
                    <th width="1%"><input type='checkbox' id='check' value='' /></th>
                    <th>Mã Bill</th>
                    <th>Khách Hàng</th>
                    <th>Cảng Nhận</th>
                    <th>Cảng Trả</th>
                    <td>#</td>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr id="row_@item.Id">

                        <td><input type='checkbox' name='chkId[]' id='checkbox' value="@item.Id" /></td>
                        <td><a href="/DMBill/CTBill/@item.Id"> @item.MaBill</a></td>
                        <td>@item.DMKhachHang.TenCongTy</td>
                        <td>@item.DMCang.TenCang</td>
                        <td>@item.DMCang1.TenCang</td>
                        <td>
                            <a href="/DMBill/Update/@item.Id">Sửa</a>&ensp;|&ensp;
                            @Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                       {
                           Confirm = "Bạn có chắc là muốn xóa bill " + item.MaBill + " không??",
                           OnComplete = "$('#row_" + @item.Id + "').remove()",
                           HttpMethod = "Delete"
                       })
                        </td>
                    </tr>
                }
            </tbody>

        </table><div class="form-group"> <input type="submit" value="Xóa" name="delete" id="delete" class="btn btn-warning" /></div>}
    </div>



