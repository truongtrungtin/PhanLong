                        </div>

                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.Label("Tên TX: ", htmlAttributes: new { @class = "control-label" })
                            <input type="text" readonly value="@Model.TenTX" class="form-control" />
                        </div>

                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.Label("Số Xe: ", htmlAttributes: new { @class = "control-label" })
