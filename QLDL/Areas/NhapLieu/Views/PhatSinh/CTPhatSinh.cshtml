                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            @Html.Label("Ghi Chú: ", htmlAttributes: new { @class = "control-label" })
                            <input type="text" readonly value="@Model.GhiChu" class="form-control" />
