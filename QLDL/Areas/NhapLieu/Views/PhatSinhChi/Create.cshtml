@model QLDL.EF.PhatSinhChi
@using QLDL.EF
@{
    ViewBag.Title = "Tạo mới";
    Layout = "~/Views/Shared/_Layout.cshtml";

    QLDLDBContext db = new QLDLDBContext();

}
<h4><b>Phát sinh chi</b></h4>

<div class="card h-90">
    <div class="card-body no-gutters">
        <h4>Thêm mới</h4>
        @using (Html.BeginForm("Create", "PhatSinhChi", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NgayChi, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <input type="date" class="form-control" name="NgayChi" value="" required />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NguoiChi, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <select name="NguoiChi" class="form-control js-example-tags" required>
                                    <option >--- Chọn Người Chi ---</option>
                                    @foreach (var item in db.DMNhanViens)
                                    {
                                        <option value="@item.Id">@item.TenNV</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NguoiNhan, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <select name="NguoiNhan" class="form-control js-example-tags" required>
                                    <option >--- Chọn Người Nhận ---</option>
                                    @foreach (var item in db.DMNhanViens)
                                    {
                                        <option value="@item.Id">@item.TenNV</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.HTTT, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <select name="HTTT" class="form-control js-example-tags" required>
                                    <option>--- Chọn hình thức thanh toán ---</option>
                                    @foreach (var item in db.HinhThucTTs)
                                    {
                                        <option value="@item.Id">@item.MoTa</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.KhachHang, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <select name="KhachHang" class="form-control js-example-tags">
                                    <option value=null>--- Chọn Khách Hàng ---</option>
                                    @foreach (var item in db.DMKhachHangs)
                                    {
                                        <option value="@item.Id">@item.TenCongTy</option>
                                    }
                                    @foreach (var item in db.DMNhanViens)
                                    {
                                        <option value="@item.Id">@item.TenNV</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Bill, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <select name="Bill" class="form-control js-example-tags">
                                    <option value=null>--- Chọn số Bill ---</option>
                                    @foreach (var item in db.DMBills)
                                    {
                                        <option value="@item.Id">@item.MaBill</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.SoHD, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.SoHD, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SoHD, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class=" col-md-9">
                        <input type="submit" value="Ghi ( Lưu )" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<hr />
<hr />
<div class="card h-90">
    <div class="card-body no-gutters">
        @using (Html.BeginForm("Create", "PhatSinhChi", FormMethod.Post))
        {
            Html.RenderAction("ViewPhatSinhChi", "PhatSinhChi");
        }
    </div>
</div>




