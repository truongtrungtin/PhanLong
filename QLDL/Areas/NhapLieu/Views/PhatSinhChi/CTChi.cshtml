@model IEnumerable<QLDL.EF.CTChi>

@{
    ViewBag.Title = "CTChi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime date = @ViewBag.NgayChi;

    var a = 0;
    var tongtien = 0;

}

<div class="container">
    <div class="card h-100">
        <div class="card-body no-gutters">
            <h4 style="text-align:center"><b>  Phát Sinh Chi </b></h4>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.Label("Ngày chi", htmlAttributes: new { @class = "control-label" })
                        <input type="text" readonly value="@date.ToShortDateString()" class="form-control" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.Label("Người chi", htmlAttributes: new { @class = "control-label" })
                        <input type="text" readonly value="@ViewBag.NguoiChi" class="form-control" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.Label("Người nhận", htmlAttributes: new { @class = "control-label" })
                        <input type="text" readonly value="@ViewBag.NguoiNhan" class="form-control" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.Label("Hình thức thanh toán", htmlAttributes: new { @class = "control-label" })
                        <input type="text" readonly value="@ViewBag.HinhThucTT" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.Label("Khách hàng", htmlAttributes: new { @class = "control-label" })
                        <input type="text" readonly value="@ViewBag.MaKH" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.Label("Số Hoá đơn", htmlAttributes: new { @class = "control-label" })
                        <input type="text" readonly value="@ViewBag.SoHD" class="form-control" />
                    </div>
                </div>
                @if (ViewBag.Bill != null)
                {
                    <div class="col-md-2">
                        <div class="form-group">
                            @Html.Label("Số Bill", htmlAttributes: new { @class = "control-label" })
                            <input type="text" readonly value="@ViewBag.Bill" class="form-control" />
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-md-8">
                   
                </div>
                <div class="col-md-3">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            @foreach (var item in Model)
                            {
                                tongtien = Convert.ToInt32(item.DonGia) * item.SoLuong;
                                a += tongtien;
                            }
                            @Html.Label("Tổng tiền chi", htmlAttributes: new { @class = "control-label" })
                            <input type="text" readonly value="@a" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr />
    <hr />
    <div class="card h-100">
        <div class="card-body no-gutters">
            <div class="table-responsive">
                <a href="/NhapLieu/PhatSinhChi/CreateCTChi/@ViewBag.IdChi" class="btn btn-primary">Thêm mới</a>
                <br />
                @using (Html.BeginForm("CTChi", "PhatSinhChi", FormMethod.Post))
                {
                    <table class="table table-bordered table-striped" width="100%">
                        <thead>
                            <tr>
                                <th width="1%"><input type='checkbox' id='check' value='' /></th>
                                @if (Model.Where(x => x.Xe != null).ToList().Count > 0)
                                {
                                    <th>
                                        Xe
                                        <button type="button" class="pull-right btn btn-default btn-condensed hide-column"
                                                data-toggle="tooltip" data-placement="bottom" title="Hide Column">
                                            <i class="fa fa-eye-slash"></i>
                                        </button>
                                    </th>
                                }
                                @if (Model.Where(x => x.Mooc != null).ToList().Count > 0)
                                {
                                    <th>
                                        Mooc
                                        <button type="button" class="pull-right btn btn-default btn-condensed hide-column"
                                                data-toggle="tooltip" data-placement="bottom" title="Hide Column">
                                            <i class="fa fa-eye-slash"></i>
                                        </button>
                                    </th>
                                }
                                @if (ViewBag.Bill != null)
                                {
                                    <th>
                                        Số Cont
                                        <button type="button" class="pull-right btn btn-default btn-condensed hide-column"
                                                data-toggle="tooltip" data-placement="bottom" title="Hide Column">
                                            <i class="fa fa-eye-slash"></i>
                                        </button>
                                    </th>
                                }
                                <th>
                                    Nội Dung
                                    <button type="button" class="pull-right btn btn-default btn-condensed hide-column"
                                            data-toggle="tooltip" data-placement="bottom" title="Hide Column">
                                        <i class="fa fa-eye-slash"></i>
                                    </button>
                                </th>
                                <th>
                                    Phí <button type="button" class="pull-right btn btn-default btn-condensed hide-column"
                                                data-toggle="tooltip" data-placement="bottom" title="Hide Column">
                                        <i class="fa fa-eye-slash"></i>
                                    </button>
                                </th>
                                <th>
                                    Đơn giá <button type="button" class="pull-right btn btn-default btn-condensed hide-column"
                                                    data-toggle="tooltip" data-placement="bottom" title="Hide Column">
                                        <i class="fa fa-eye-slash"></i>
                                    </button>
                                </th>
                                <th>
                                    Số lượng <button type="button" class="pull-right btn btn-default btn-condensed hide-column"
                                                     data-toggle="tooltip" data-placement="bottom" title="Hide Column">
                                        <i class="fa fa-eye-slash"></i>
                                    </button>
                                </th>
                                <th>
                                    Tiền Chi <button type="button" class="pull-right btn btn-default btn-condensed hide-column"
                                                     data-toggle="tooltip" data-placement="bottom" title="Hide Column">
                                        <i class="fa fa-eye-slash"></i>
                                    </button>
                                </th>
                                <th>
                                    # <button type="button" class="pull-right btn btn-default btn-condensed hide-column"
                                              data-toggle="tooltip" data-placement="bottom" title="Hide Column">
                                        <i class="fa fa-eye-slash "></i>
                                    </button>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.Id">

                                    <td><input type='checkbox' name='chkId[]' id='checkbox' value="@item.Id" /></td>
                                    @if (item.Xe != null)
                                    {
                                        <td>@item.DMXe.BienSo</td>
                                    }
                                    @if (item.Mooc != null)
                                    {
                                        <td>@item.DMMooc.BienSo</td>
                                    }
                                    @if (ViewBag.Bill != null)
                                    {
                                        <td>@item.Cont</td>
                                    }
                                    <td>@item.NoiDung</td>
                                    @if (@item.DMPhi != null)
                                    {
                                        <td>@item.DMPhi.TenPhi</td>
                                    }
                                    else
                                    {
                                        <td>null</td>
                                    }
                                    <td>@item.DonGia</td>
                                    <td>@item.SoLuong</td>
                                    <td> @{ var tien = Convert.ToInt64(item.DonGia) * item.SoLuong;} @tien VNĐ</td>

                                    <td>
                                        @Html.ActionLink("Chỉnh sửa", "UpdateCTChi", new { id = item.Id }, new { @class = "btn btn-primary mb-1" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="show-column-footer">
                            <tr>
                                <th colspan="8"><a class="show-column" href="#">Hiển thị các cột đã ẩn</a></th>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="form-group">
                        <input type="submit" value="Xóa" name="delete" id="delete" class="btn btn-warning" /> |
                        @Html.ActionLink("Trở lại", "Index")

                    </div>
                }

            </div>
        </div>
    </div>


</div>

