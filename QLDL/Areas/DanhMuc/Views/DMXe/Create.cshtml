@model QLDL.EF.DMXe
@{
    ViewBag.Title = "Thêm Xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h4>
        <b>Danh mục Xe</b>
    </h4>
<div class="card h-100">
    <div class="card-body no-gutters">
        <h4><b>Thêm Xe</b></h4>
        <hr />
        @using (Html.BeginForm("Create", "DMXe", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
