@model QLDL.EF.DMLoai
@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">
        <h4><b>Danh mục Loại</b></h4>
        <div class="card h-100">
            <div class="card-body no-gutters">
                <h4>Chỉnh sửa loại:  @Model.MaLoai</h4>
                @using (Html.BeginForm("Update", "DMLoai", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaLoai, htmlAttributes: new { @class = "control-label col-md-5" })
                                    <div class="col-md-7">
                                        <input type="text" readonly class="form-control" name="MaLoai" value="@Model.MaLoai" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MoTa1, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.MoTa1, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MoTa1, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class=" col-md-10">
                                <input type="submit" value="Lưu" class="btn btn-primary" /> |
                                @Html.ActionLink("trở lại", "Index")
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>




