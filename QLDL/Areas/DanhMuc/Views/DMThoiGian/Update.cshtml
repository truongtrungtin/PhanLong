@model QLDL.EF.DMThoiGian
@{
    ViewBag.Title = "Chỉnh Sửa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4><b>Danh mục Kho</b></h4>
<div class="card h-100">
    <div class="card-body no-gutters">
        <h4><b>Chỉnh sửa thông tin kho: @Model.MaTG</b></h4>
        @using (Html.BeginForm("Update", "DMThoiGian", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaTG, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.MaTG, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MaTG, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ThoiGian, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.ThoiGian, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ThoiGian, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-primary" /> |
                    @Html.ActionLink("Danh mục", "Index")
                </div>
            </div>
        }
    </div>
</div>
