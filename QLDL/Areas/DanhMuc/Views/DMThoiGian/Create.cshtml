@model QLDL.EF.DMThoiGian
@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">
        <h4><b>Danh mục Thời Gian</b></h4>
        <div class="card h-100">
            <div class="card-body no-gutters">
                <h4><b>Thêm mới</b></h4>
                @using (Html.BeginForm("Create", "DMThoiGian", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaTG, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.MaTG, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MaTG, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ThoiGian, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.ThoiGian, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ThoiGian, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>


                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Ghi ( Lưu )" class="btn btn-primary" />
                        </div>
                    </div>
                }
            </div>
        </div>
        <hr />
        <hr />
        <div class="card h-100">
            <div class="card-body no-gutters">
                @using (Html.BeginForm("Create", "DMThoiGian", FormMethod.Post))
                {
                    Html.RenderAction("ViewDMThoiGian", "DMThoiGian");
                }
            </div>
        </div>
    </div>

