@model QLDL.EF.HinhThucTT
@{
    ViewBag.Title = "Chỉnh Sửa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h3><b>Hình thức thanh toán: @Model.MoTa</b></h3>
    <hr />
    <hr />
    <h4><b>Chỉnh sửa </b></h4>
    @using (Html.BeginForm("Update", "HinhThucTT", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaHT, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MaHT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaHT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </div>
        </div>


    }
    <hr />
    <hr />
    @using (Html.BeginForm("Update", "HinhThucTT", FormMethod.Post))
    {
        Html.RenderAction("ViewHinhThucTT", "HinhThucTT");

    }

</div>