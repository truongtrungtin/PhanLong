@model QLDL.EF.HinhThucTT
@{
    ViewBag.Title = "Thêm hình thức thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3 ><b>Hình thức thanh toán</b></h3>
    <hr />
    <div class="card h-100">
        <div class="card-body no-gutters">
            <h4><b>Thêm mới</b></h4>
            @using (Html.BeginForm("Create", "HinhThucTT", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaHT, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.MaHT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaHT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Ghi ( Lưu )" class="btn btn-primary" />
                </div>
            </div>
        </div>
            }
        </div>

    </div>
    <hr />
    <hr />
    <div class="card h-100">
        <div class="card-body no-gutters">
            @using (Html.BeginForm("Create", "HinhThucTT", FormMethod.Post))
            {
                Html.RenderAction("ViewHinhThucTT", "HinhThucTT");

            }
        </div>
    </div>
</div>