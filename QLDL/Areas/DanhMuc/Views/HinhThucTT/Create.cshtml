@model QLDL.EF.HinhThucTT
@{
    ViewBag.Title = "Thêm hình thức thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3><b>Hình thức thanh toán</b></h3>
    <hr />
    <hr />
    <h4><b>Thêm mới</b></h4>

    @using (Html.BeginForm("Create", "HinhThucTT", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaHT, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MaHT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaHT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Thêm mới" class="btn btn-primary" />
                </div>
            </div>

        </div>
    }
    <hr />
    <hr />
    @using (Html.BeginForm("Create", "HinhThucTT", FormMethod.Post))
    {
        Html.RenderAction("ViewHinhThucTT", "HinhThucTT");

    }
</div>
