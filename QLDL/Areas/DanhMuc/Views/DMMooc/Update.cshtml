@model QLDL.EF.DMMooc
@{
    ViewBag.Title = "Chỉnh sửa Mooc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4><b>Danh mục Mooc</b></h4>
<div class="card h-100">
    <div class="card-body no-gutters">
        <h4><b>Chỉnh sửa Mooc @Model.MaMooc</b></h4>
        @using (Html.BeginForm("Update", "DMMooc", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.MaMooc, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MaMooc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaMooc, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.BienSo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BienSo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BienSo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class=" col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />|
                @Html.ActionLink("Danh mục", "Index")
            </div>
        </div>
    </div>
        }
    </div>
</div>

