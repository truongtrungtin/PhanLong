@model QLDL.EF.DMCang
@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4><b>Danh mục Cảng</b></h4>
<div class="card h-100">
    <div class="card-body no-gutters">
        <h4><b>Chỉnh sửa thông tin cảng: @Model.TenCang</b></h4>
        @using (Html.BeginForm("Update", "DMCang", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaCang, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.MaCang, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MaCang, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenCang, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.TenCang, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenCang, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-primary" /> |

                        @Html.ActionLink("Danh mục", "Index")
                    </div>
                </div>
            </div>
        }
    </div>
</div>
