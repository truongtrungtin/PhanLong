@model QLDL.EF.DMCang
@{
    ViewBag.Title = "Thêm cảng mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">
        <h4><b>Danh mục Cảng</b></h4>
        <div class="card h-100">
            <div class="card-body no-gutters">
                <h4><b>Thêm mới</b></h4>
                @using (Html.BeginForm("Create", "DMCang", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaCang, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="MaCang" value="" required />       
                                        @Html.ValidationMessageFor(model => model.MaCang, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TenCang, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="TenCang" value="" required />  
                                        @Html.ValidationMessageFor(model => model.TenCang, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Ghi ( Lưu )" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <hr />
        <hr />

        <div class="card h-100">
            <div class="card-body no-gutters">
                @using (Html.BeginForm("Create", "DMCang", FormMethod.Post))
                {
                    Html.RenderAction("ViewDMCang", "DMCang");

                }
            </div>
        </div>
    </div>


