@model QLDL.EF.DMCang
@{
    ViewBag.Title = "Thêm cảng mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h3><b>Cảng</b></h3>
    <hr />
    <hr />
    <h4><b>Thêm mới</b></h4>
    @using (Html.BeginForm("Create", "DMCang", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaCang, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.MaCang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaCang, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TenCang, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.TenCang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenCang, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Thêm mới" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
    <hr />
    <hr />
    @using (Html.BeginForm("Create", "DMCang", FormMethod.Post))
    {
        Html.RenderAction("ViewDMCang", "DMCang");

    }
</div>
