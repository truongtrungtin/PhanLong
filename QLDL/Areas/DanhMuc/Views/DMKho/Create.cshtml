@model QLDL.EF.DMKho
@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4><b>Thêm Kho</b></h4>
<hr />
@using (Html.BeginForm("Create", "DMKho", FormMethod.Post))
{
    @Html.AntiForgeryToken()
