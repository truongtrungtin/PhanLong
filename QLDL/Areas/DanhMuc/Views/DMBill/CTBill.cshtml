@model IEnumerable<QLDL.EF.CTBill>
@{
    ViewBag.Title = "Bill: " + ViewBag.Bill;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card h-100">
    <div class="card-body no-gutters">
        <h4> Bill:  <b>@ViewBag.Bill</b></h4>
        <h5>Khách hàng: @ViewBag.KH | Cảng Nhận: @ViewBag.CN | Cảng Tra: @ViewBag.CT  </h5>
        @Html.ActionLink("Thêm cont", "CreateCTBill", new { id = @ViewBag.IdBill }, new { @class = "btn btn-primary mb-1" })
        <hr />
        <div class="table-responsive">
            @using (Html.BeginForm("CTBill", "DMBill", FormMethod.Post))
            {
                <table class="table table-bordered table-hover table-striped" id="dataTable" width="100%">
                    <thead>
                        <tr>
                            <th width="1%"><input type='checkbox' id='check' value='' /></th>
                            <th>Số Cont</th>
                            <th>Loại</th>
                            <th>Mã kho</th>
                            <th>Số DK</th>
                            <th>Seal</th>
                            <th>Độ dày</th>
                            <th>Quy Cách</th>
                            <th>Hạn Lưu Bãi</th>
                            <th>Hạn lưu Cont</th>
                            <th>Hạn Lưu rỗng</th>
                            <th>Ghi Chú</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.Id">
                                <td><input type='checkbox' name='chkId[]' id='checkbox' value="@item.Id" /></td>
                                <td>@item.Cont</td>
                                <td>@(item.Loai != null ? item.DMLoai.MaLoai: null)</td>
                                <td>@(item.Kho != null ? item.DMKho.MaKho : null )</td>
                                <td>@item.SoDK</td>
                                <td>@item.Seal</td>
                                <td>@item.DoDay</td>
                                <td>@item.QuyCach</td>
                                <td>@(item.HanLuuBai != null ? item.HanLuuBai.Value.ToShortDateString() : null)</td>

                                <td>@(item.HanLuuCont != null ? item.HanLuuCont.Value.ToShortDateString() : null)</td>

                                <td>@(item.HanLuuRong != null ? item.HanLuuRong.Value.ToShortDateString() : null)</td>

                                <td class="cell expand-maximum-on-hover">@item.GhiChu</td>
                                <td>
                                    @Html.ActionLink("Chỉnh sửa", "UpdateCTBill", new { id = item.Bill, CTBill = item.Id }, new { @class = "btn btn-primary mb-1" })
                                    @*&ensp;| &ensp;
                                @Html.ActionLink("Copy", "CreateCTBill", new { id = item.Bill, Copy = "Copy", cTBill = item.Id }, new { @class = "btn btn-primary mb-1" })*@
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <div class="form-group">
                    <input type="submit" value="Xóa" name="delete" id="delete" class="btn btn-warning" /> |
                    @Html.ActionLink("Trở lại", "Index")
                </div>
            }
            <div style="text-align:right">
                @using (Html.BeginForm("ImportExcelCTBill", "DMBill", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <input type="hidden" name="Sheet" value="CTBill$" />
                    <input type="submit" id="Submit" name="Submit" value="Import Excel" class="btn btn-success" />
                    <label>
                        <input type="file" id="FileUpload" name="FileUpload" aria-label="EXCEL" />
                    </label>
                }
            </div>
        </div>
    </div>
</div>




