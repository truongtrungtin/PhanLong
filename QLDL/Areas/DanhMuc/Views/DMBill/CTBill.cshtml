@model IEnumerable<QLDL.EF.CTBill>
@{
    ViewBag.Title = "Danh mục Kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card h-100">
    <div class="card-body no-gutters">
        <h4> Bill:  <b>@ViewBag.Bill</b>  @Html.ActionLink("Thêm dữ liệu vào Bill", "CreateCTBill", new { id = @ViewBag.IdBill }, new { @class = "btn btn-primary mb-1" })</h4>
        <div class="table-responsive">
            @using (Html.BeginForm("CTBill", "DMBill", FormMethod.Post))
            {
                <table class="table table-bordered table-striped" id="dataTable" width="100%">
                    <thead>
                        <tr>
                            <th width="1%"><input type='checkbox' id='check' value='' /></th>
                            <th>Ngày Giao</th>
                            <th>Loại</th>
                            <th>Mã kho</th>
                            <th>Số Cont</th>
                            <th>Số DK</th>
                            <th>Seal</th>
                            <th>Độ dày</th>
                            <th>Quy Cách</th>
                            <th>Số Xe</th>
                            <th>Ngày gửi</th>
                            <th>Hạn lưu Cont</th>
                            <th>TT Lưu Cont</th>
                            <th>Hạn Lưu Bãi</th>
                            <th>TT Lưu Bãi</th>
                            <th>Hạn Lưu rỗng</th>
                            <th>TT Lưu Rỗng</th>
                            <th>Ghi Chú</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr id="row_@item.Id">
                            <td><input type='checkbox' name='chkId[]' id='checkbox' value="@item.Id" /></td>
                            <td>@item.NgayGiao.Value.ToShortDateString()</td>
                            <td>@item.DMLoai.MaLoai</td>
                            <td>@item.DMKho.MaKho</td>
                            <td>@item.Cont</td>
                            <td>@item.SoDK</td>
                            <td>@item.Seal</td>
                            <td>@item.DoDay</td>
                            <td>@item.QuyCach</td>
                            <td>@item.DMXe.MaXe</td>
                            <td>@item.NgayGui.Value.ToShortDateString()</td>
                            <td>@item.HanLuuCont.Value.ToShortDateString()</td>
                            <td >
                                <a href="#" style="color:@(item.TrangThaiLuuCont ? "red" : "null")" class="btn-cont" data-id="@item.Id">@(item.TrangThaiLuuCont ? "Còn" : "Hết")</a>
                            </td>
                            <td>@item.HanLuuBai.Value.ToShortDateString()</td>
                            <td>
                                <a href="#"  style="color: @(item.TrangThaiLuuBai ? "red" : "null")" class="btn-bai"  data-id="@item.Id">@(item.TrangThaiLuuBai ? "Còn" : "Hết")</a>
                            </td>
                            <td>@item.HanLuuRong.Value.ToShortDateString()</td>
                            <td>
                                <a href="#"  style="color: @(item.TrangThaiLuuRong ? "red" : "null")" class="btn-rong" data-id="@item.Id" >@(item.TrangThaiLuuRong ? "Còn" : "Hết")</a>
                            </td>

                            <td>@item.GhiChu</td>
                            <td>
                                @Html.ActionLink("Chỉnh sửa", "UpdateCTBill", new { id = item.Bill, CTBill = item.Id }, new { @class = "btn btn-primary mb-1" })
                                &ensp;| &ensp;
                                @Html.ActionLink("Copy", "CreateCTBill", new { id = item.Bill, Copy = "Copy", cTBill = item.Id }, new { @class = "btn btn-primary mb-1" })
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>
                <div class="form-group">
                    <input type="submit" value="Xóa" name="delete" id="delete" class="btn btn-warning" /> |
                    @Html.ActionLink("Trở lại", "Index")
                </div>
            }
        </div>
    </div>
</div>




