@model PhanLong.EF.DMCang
@{
    ViewBag.Title = "Danh mục cảng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.url = "Index";
    ViewBag.Back = "Trở lại";
}


<div class="card">
    <div class="container">
        <div class="card-header">
            <h4 class="card-title">
                <b>Thêm cảng</b>
            </h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "DMCang", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.MaCang, htmlAttributes: new { @class = "col-form-label col-sm-3" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.MaCang, new { htmlAttributes = new { @class = "form-control form-control-sm", @required = true, @maxlength = "4" } })
                                    @Html.ValidationMessageFor(model => model.MaCang, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.TenCang, htmlAttributes: new { @class = "col-form-label col-sm-4"})
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.TenCang, new { htmlAttributes = new { @class = "form-control form-control-sm", @required = true } })
                                    @Html.ValidationMessageFor(model => model.TenCang, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Ghi ( Lưu )" class="btn btn-primary" />
                            <button type="reset" class="btn btn-default">Hủy</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="card">
    <div class="container">
        @using (Html.BeginForm("Create", "DMCang", FormMethod.Post))
        {
            Html.RenderAction("ViewDMCang", "DMCang");
        }
    </div>
</div>


