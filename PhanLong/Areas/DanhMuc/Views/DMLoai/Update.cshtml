@model PhanLong.EF.DMLoai
@{
    ViewBag.Title = "Danh mục loại cont";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.url = "/DanhMuc/DMLoai/Index";
    ViewBag.Back = "Trở lại";
}
<div class="card">
    <div class="container">
        <div class="card-header">
            <h4 class="card-title">
                <b>Chỉnh sửa loại cont:  @Model.MaLoai</b>
            </h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Update", "DMLoai", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.MaLoai, htmlAttributes: new { @class = "col-form-label col-sm-3" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.MaLoai, new { htmlAttributes = new { @class = "form-control form-control-sm", @readonly = true } })
                                    @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.MoTa, htmlAttributes: new {  @class = "col-form-label col-sm-4", @required = true })
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.MoTa1, htmlAttributes: new {@class = "col-form-label col-sm-4", @required = true })
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.MoTa1, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                    @Html.ValidationMessageFor(model => model.MoTa1, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class=" col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



