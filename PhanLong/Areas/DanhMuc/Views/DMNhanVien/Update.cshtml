@model PhanLong.EF.DMNhanVien
@{
    ViewBag.Title = "Danh mục nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
    ViewBag.url = "/DanhMuc/DMNhanVien/Index";
    ViewBag.Back = "Trở lại";
}
    <div class="card">
        <div class="container">
            <div class="card-header">
                <h4 class="card-title">
                    <b>Chỉnh sửa thông tin: @Model.MaNV </b>
                </h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Update", "DMNhanVien", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.MaNV, htmlAttributes: new {@class = "col-form-label col-sm-4" })
                                    <div class="col-sm-8">
                                        @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control form-control-sm", @readonly = true } })
                                        @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-5">
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.TenNV, htmlAttributes: new {@class = "col-form-label col-sm-3", @required = true })
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class=" col-md-10">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>



