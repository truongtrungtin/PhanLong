@model PhanLong.EF.DMThoiGian
@{
    ViewBag.Title = "Danh mục thời gian";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.url = "Index";
    ViewBag.Back = "Trở lại";
}
<div class="card">
    <div class="container">
        <div class="card-header">
            <h4 class="card-title">
                <b>Thêm mới</b>
            </h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "DMThoiGian", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.MaTG, htmlAttributes: new { @class = "col-form-label col-sm-3" })
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.MaTG, new { htmlAttributes = new {@class = "form-control form-control-sm", @required = true } })
                                    @Html.ValidationMessageFor(model => model.MaTG, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group row">
                                @Html.LabelFor(model => model.ThoiGian, htmlAttributes: new {@class = "col-form-label col-sm-4" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.ThoiGian, new { htmlAttributes = new { @class = "form-control form-control-sm", @required = true } })
                                    @Html.ValidationMessageFor(model => model.ThoiGian, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Ghi ( Lưu )" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="card">
    <div class="container">
        @using (Html.BeginForm("Create", "DMThoiGian", FormMethod.Post))
        {
            Html.RenderAction("ViewDMThoiGian", "DMThoiGian");
        }
    </div>
</div>

