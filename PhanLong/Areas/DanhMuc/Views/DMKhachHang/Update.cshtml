@model PhanLong.EF.DMKhachHang
@{
    ViewBag.Title = "Danh mục khác hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.url = "/DanhMuc/DMKhachHang/Index";
    ViewBag.Back = "Trở lại";
}
<div class="card">
    <div class="card-header">
        <h4 class="card-title">
            <b>Chỉnh sửa thông tin khách hàng: @Model.MaKH </b>
        </h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Update", "DMKhachHang", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div class="row" style="height: 30px;">
                    <div class="col-sm-2">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.MaKH, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.MaKH, new { htmlAttributes = new { @class = "form-control form-control-sm", @readonly = true } })
                                @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.TenCongTy, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-3"})
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.TenCongTy, new { htmlAttributes = new { @class = "form-control form-control-sm", @required = true } })
                                @Html.ValidationMessageFor(model => model.TenCongTy, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="height: 30px;">
                    <div class="col-sm-2">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.MST, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.MST, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.MST, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.NguoiLienHe, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.NguoiLienHe, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.NguoiLienHe, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class=" col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>



