@model PhanLong.EF.CTBill


<div class="form-group form-group-sm">
    <input type="hidden" readonly name="Id" id="Id" value="@Model.Id" />
    <label>Files:</label>
    <input type="text" name="Files" id="Files" class="form-control form-control-sm" value="@Model.Files" />
    <a id="btnSelectFiles" href="#">Chọn file</a>
</div>
<div class="form-group form-group-sm">
    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
    <input type="submit" href="#" class="btn btn-primary" value="Lưu" id="Save" />
</div>




<script src="~/Content/plugins/ckfinder/ckfinder.js"></script>
<script>
   
    $('#btnSelectFiles').on('click', function (e) {
        e.preventDefault();
        var finder = new CKFinder();
        finder.selectActionFunction = function (url) {
            $('#Files').val(url);
        };
        finder.popup();
    })

</script>
