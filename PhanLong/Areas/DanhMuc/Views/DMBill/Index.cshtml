@model IEnumerable<PhanLong.EF.DMBill>
@{
    ViewBag.Title = "Danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section css{

}
<div class="card">
    <div class="card-header">
        <h5>
            <b>Danh Mục Bill</b>
            @Html.ActionLink("Thêm Bill", "Create", null, new { @class = "btn btn-primary mb-1" })
        </h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Index", "DMBill", FormMethod.Post))
        {
            <table class="table table-bordered table-hover table-striped" id="dataTable" width="100%">
                <thead>
                    <tr>
                        <th width="1%"><input type='checkbox' id='check' value='' /></th>
                        <th>Số tờ khai</th>
                        <th>Mã Bill</th>
                        <th>Số lượng cont</th>
                        <th>Tàu đến</th>
                        <th>Người gửi</th>
                        <th>Khách Hàng</th>
                        <th>Cảng Nhận</th>
                        <th>Cảng Trả</th>
                        <th>Hạn Lưu Bãi</th>
                        <th>Hạn Lưu Cont</th>
                        <th>Hạn Lưu Rỗng</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        if (Model.Count() > 0)
                        {
                    <tr>
                        <td width="1%"><input type='checkbox' name='chkId[]' id='checkbox' value="@item.Id" /></td>
                        <td>@(item.SoToKhai != null ? Html.ActionLink(item.SoToKhai, "CTBill", new { id = item.Id }) : null)</td>
                        <td>@(item.MaBill != null ? Html.ActionLink(item.MaBill, "CTBill", new { id = item.Id }) : null)</td>
                        @{ var cont = item.CTBills.Where(x => x.Bill == item.Id).ToList();}
                        <td>@cont.Count()</td>
                        <td>@(item.NgayTauDen != null ? item.NgayTauDen.Value.ToShortDateString() : null)</td>
                        <td>@(item.NguoiGui != null ? item.NguoiGui : null)</td>
                        <td>@(item.KhachHang != null ? item.DMKhachHang.TenCongTy : null)</td>
                        <td>@(item.CangNhan != null ? item.DMCang.TenCang : null)</td>
                        <td>@(item.CangTra != null ? item.DMCang1.TenCang : null)</td>
                        @{ var hanluubai = item.CTBills.Where(x => x.Bill == item.Id).FirstOrDefault();}
                        @if (hanluubai != null)
                        {
                            var ngayluubai = (Convert.ToDateTime(hanluubai.HanLuuBai) - DateTime.Now).TotalDays;
                            if (ngayluubai < 2 && hanluubai.NgayGiao == null && hanluubai.NgayGui == null)
                            {
                                <td style="color:red">@(hanluubai.HanLuuBai != null ? hanluubai.HanLuuBai.Value.ToShortDateString() + " (Còn 2 ngày)" : "Chưa nhập hạn lưu bãi")</td>
                            }
                            else
                            {
                                <td style="color:@(hanluubai.HanLuuBai != null ? "black" : "red")">@(hanluubai.HanLuuBai != null ? hanluubai.HanLuuBai.Value.ToShortDateString() : "Chưa nhập hạn lưu bãi")</td>
                            }
                            var hanluucont = item.CTBills.Where(x => x.Bill == item.Id).FirstOrDefault();
                            <td style="color:@(hanluucont.HanLuuCont != null ? "black" : "red")"> @(hanluucont.HanLuuCont != null ? hanluucont.HanLuuCont.Value.ToShortDateString() : "Chưa nhập hạn lưu cont")</td>
                            var hanluurong = item.CTBills.Where(x => x.Bill == item.Id).FirstOrDefault();
                            <td style="color:@(hanluurong.HanLuuRong != null ? "black" : "red")"> @(hanluurong.HanLuuRong != null ? hanluurong.HanLuuRong.Value.ToShortDateString() : "Chưa nhập hạn lưu rỗng")</td>
                        }
                        else
                        {
                            <td style="color:red">chưa nhập Cont</td>
                            <td style="color:red">chưa nhập Cont</td>
                            <td style="color:red">chưa nhập Cont</td>
                        }
                    </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="margin">
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle dropdown-icon" data-toggle="dropdown">
                        Hành động
                        <span class="sr-only">Hành động</span>
                    </button>
                    <div class="dropdown-menu" role="menu">
                        <input type="submit" value="Chi tiết" name="chitiet" id="chitiet" class="dropdown-item" />
                        <input type="submit" value="Chỉnh sửa" name="update" id="update" class="dropdown-item" />
                        <input type="submit" value="Xóa" name="delete" id="delete" class="dropdown-item" />
                    </div>
                </div>
            </div>
        }
        <div class="col-md-2 float-sm-right">
            @using (Html.BeginForm("ImportExcel", "DMBill", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="hidden" name="Sheet" value="DMBill$" />
                <div class="form-group">
                    <label for="FileUpload">Thêm dữ liệu bằng file excel</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="FileUpload" id="FileUpload">
                            <label class="custom-file-label" for="FileUpload">Chọn file</label>
                        </div>
                        <div class="input-group-append">
                            <input type="submit" id="Submit" name="Submit" value="Import Excel" class="btn btn-success btn-flat" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section js{

