@model PhanLong.EF.DMBill
@using PhanLong.EF

@{
    ViewBag.Title = "Danh mục bill";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.url = "Index";
    ViewBag.Back = "Trở lại";
    PhanLongDBContext db = new PhanLongDBContext();
}

@section css{
    <!-- Select2 -->
    <link rel="stylesheet" href="/Content/plugins/select2/css/select2.css">
    <link rel="stylesheet" href="/Content/plugins/select2-bootstrap4-theme/select2-bootstrap4.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="/Content/plugins/daterangepicker/daterangepicker.css">
}
<div class="card">
    @using (Html.BeginForm("Create", "DMBill", FormMethod.Post))
    {
        <div class="card-header">
            <h4 class="card-title">
                <b>Thêm bill</b>
            </h4>
        </div>
        <div class="card-body">

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row" style="min-height: 30px;">
                    <div class="col-sm-2">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.SoToKhai, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.SoToKhai, new { htmlAttributes = new { @class = "form-control form-control-sm", @required = true } })
                                @Html.ValidationMessageFor(model => model.SoToKhai, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.MaBill, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.MaBill, new { htmlAttributes = new { @class = "form-control form-control-sm", @required = true } })
                                @Html.ValidationMessageFor(model => model.MaBill, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.NgayTauDen, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-4" })
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    <input type="text" name="NgayTauDen" class="form-control form-control-sm" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                                </div>
                                @Html.ValidationMessageFor(model => model.NgayTauDen, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Lo, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Lo, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.Lo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.NgayDK, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-4" })
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                    </div>
                                    <input type="text" name="NgayDK" class="form-control form-control-sm" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                                </div>
                                @Html.ValidationMessageFor(model => model.NgayDK, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.NguoiGui, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.NguoiGui, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                @Html.ValidationMessageFor(model => model.NguoiGui, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row" style="min-height: 30px">
                    <div class="col-sm-4">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.KhachHang, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-2" })
                            <div class="col-sm-10">
                                <select name="KhachHang" class="form-control form-control-sm select2" data-placeholder="Chọn khách hàng" required>
                                    <option value=""></option>
                                    @foreach (var item in db.DMKhachHangs)
                                    {
                                        <option value="@item.Id">@item.MaKH - @item.TenCongTy</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(model => model.KhachHang, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.CangNhan, htmlAttributes: new { @style = "text-align:right", @class = "col-form-label col-sm-4" })
                            <div class="col-sm-8">
                                <select name="CangNhan" class="form-control form-control-sm select2" data-placeholder="Chọn cảng nhận">
                                    <option value=""></option>
                                    @foreach (var item in db.DMCangs)
                                    {
                                        <option value="@item.Id">@item.MaCang - @item.TenCang</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(model => model.KhachHang, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="card-header">
            <h4 class="card-title">
                <b>Thêm cont</b>
            </h4>
        </div>
        <div class="card-body">
            <div class="row" style="min-height: 30px;">
                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-3" style="text-align:right" for="Cont">Cont:</label>
                        <div class="col-sm-8">
                            <input type="text" name="Cont" class="form-control form-control-sm" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-4" style="text-align:right" for="SoDK">Số đăng ký:</label>
                        <div class="col-sm-8">
                            <input type="text" name="SoDK" class="form-control form-control-sm" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-4" style="text-align:right" for="Loai">Loại:</label>
                        <div class="col-sm-8">
                            <select name="Loai" class="form-control form-control-sm select2" data-placeholder="Chọn loại">
                                <option value=""></option>
                                @foreach (var item in db.DMLoais)
                                {
                                    <option value="@item.Id">@item.MaLoai</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-4" style="text-align:right" for="HaRong">Hạ rỗng:</label>
                        <div class="col-sm-8">
                            <select name="HaRong" class="form-control form-control-sm select2" data-placeholder="Chọn cảng hạ rỗng">
                                <option value=""></option>
                                @foreach (var item in db.DMCangs)
                                {
                                    <option value="@item.Id">@item.MaCang -@item.TenCang</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-5" style="text-align:right" for="HanLuuBai">Hạn Lưu Bãi:</label>
                        <div class="col-sm-7">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                                <input type="text" name="HanLuuBai" class="form-control form-control-sm" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-5" style="text-align:right" for="HanLuuCont">Hạn lưu cont:</label>
                        <div class="col-sm-7">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                                <input type="text" name="HanLuuCont" class="form-control form-control-sm" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="min-height:30px">

                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-5" style="text-align:right" for="HanLuuRong">Hạn Lưu Rỗng:</label>
                        <div class="col-sm-7">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                                <input type="text" name="HanLuuRong" class="form-control form-control-sm" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-3" style="text-align:right" for="Kho">Kho:</label>
                        <div class="col-sm-9">
                            <select name="Kho" class="form-control form-control-sm select2" data-placeholder="Chọn kho">
                                <option value=""></option>
                                @foreach (var item in db.DMKhoes)
                                {
                                    <option value="@item.Id">@item.MaKho - @item.DiaChi</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-4" style="text-align:right" for="ViTri">Vị trí:</label>
                        <div class="col-sm-8">
                            <input type="text" name="ViTri" class="form-control form-control-sm" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-4" style="text-align:right" for="DoDay">Độ dày:</label>
                        <div class="col-sm-8">
                            <input type="text" name="DoDay" class="form-control form-control-sm" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-4" style="text-align:right" for="QuyCach">Quy cách:</label>
                        <div class="col-sm-8">
                            <input type="text" name="QuyCach" class="form-control form-control-sm" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group row">
                        <label class="col-form-label col-sm-3" style="text-align:right" for="GhiChu">Ghi chú:</label>
                        <div class="col-sm-9">
                            <textarea type="text" name="GhiChu" class="form-control form-control-sm" rows="1" placeholder="Ghi chú ...."></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Lưu và thêm cont" name="luuthem" class="btn btn-primary" />
                <input type="submit" value="Lưu và thoát" name="lutthoat" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

<div class="card">
    @using (Html.BeginForm("Index", "DMBill", FormMethod.Post))
    {
        Html.RenderAction("ViewDMBill", "DMBill");
    }
</div>

