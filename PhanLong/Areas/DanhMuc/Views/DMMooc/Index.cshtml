@model IEnumerable<PhanLong.EF.DMMooc>
@{
    ViewBag.Title = "Danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="card">
    <div class="container">
        <div class="card-header">
            <h5>
                <b>Danh mục Mooc</b>
                @Html.ActionLink("Thêm Mooc", "Create", null, new { @class = "btn btn-primary mb-1" })
            </h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Index", "DMMooc", FormMethod.Post))
            {
                <table class="table table-bordered table-hover table-striped" id="dataTable" width="100%">
                    <thead>
                        <tr>

                            <th style="width: 1%"><input type='checkbox' id='check' value='' /></th>
                            <th>Mã Mooc</th>
                            <th>Biển số</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.Id">

                                <td><input type='checkbox' name='chkId[]' id='checkbox' value="@item.Id" /></td>
                                <td>@item.MaMooc</td>
                                <td>@item.BienSo</td>
                                <td>
                                    @Html.ActionLink("Chỉnh sửa", "Update", new { id = item.Id }, new { @class = "btn btn-primary mb-1" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <div class="form-group">
                    <input type="submit" value="Xóa" name="delete" id="delete" class="btn btn-warning" />
                </div>
            }
        </div>
    </div>
</div>





