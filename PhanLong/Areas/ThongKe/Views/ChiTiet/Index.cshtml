    <!-- Select2 -->
    <link rel="stylesheet" href="/Content/plugins/select2/css/select2.css">
    <link rel="stylesheet" href="/Content/plugins/select2-bootstrap4-theme/select2-bootstrap4.css">
    <style>
        table th input { /* Chrome, Firefox, Opera, Safari 10.1+ */
            color: black;
