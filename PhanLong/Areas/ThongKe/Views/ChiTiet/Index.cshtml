                    <div class="col-sm-4">
                        <label class="col-form-label col-sm-12" for="Ha">Tiền hạ</label>
                        <div class="col-sm-12">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm" value="@(cuoc != 0 ? String.Format("{0:0,0}", (ha)): null)" style="text-align:right" readonly>
                            </div>
                        </div>
