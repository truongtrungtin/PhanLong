                    <div class="col-sm-4">
                        <label class="col-form-label col-sm-12" for="Cuoc">Tiền khác</label>
                        <div class="col-sm-12">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm" value="@(cuoc != 0 ? String.Format("{0:0,0}", (khac)): null)" style="text-align:right" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
