@model PhanLong.EF.PhatSinh
@using PhanLong.EF
@using PhanLong.DAO
@{

    ViewBag.Title = "Nhập liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.url = "Index";
    ViewBag.Back = "Trở lại";
    PhanLongDBContext db = new PhanLongDBContext();
