@model PhanLong.EF.TodoList
@{
    string ngay = Convert.ToDateTime(ViewBag.ngay).ToShortDateString();
}
<input type="hidden" readonly name="Id" value="@Model.Id" />
<div class="row">
    <div class="col-lg-5">
        <div class="form-group row">
            <label style="text-align:right" class="col-form-label col-lg-2" for="Ngay">Ngày:</label>
            <div class="col-lg-9">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                    </div>
                    <input type="text" name="ngay" id="datemask" class="form-control form-control-sm" value="@ngay" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-7">
        <div class="form-group row">
            <label style="text-align:right" class="col-form-label col-lg-3" for="Mota">Mô tả:</label>
            <div class="col-lg-9">
                <input type="text" name="Mota" id="Mota" value="@Model.Mota" placeholder="Nhập mô tả ..." class="form-control form-control-sm" />
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="form-group row">
            <label class="col-form-label col-lg-3">File đính kèm</label>
            <div class="col-lg-9">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input custom-control" id="FileUpload" name="FileUpload">
                        @if (Model.FileUpload != null)
                        {
                            <label class="custom-file-label" for="FileUpload">@Model.FileUpload</label>

                        }
                        else
                        {
                            <label class="custom-file-label" for="FileUpload">Chọn file</label>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-group form-group-sm text-right">
    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
    <input type="submit" href="#" class="btn btn-primary" value="Lưu" id="SaveGhiChu" />
</div>
<script src="~/Content/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

<script>
    $(function () {
        bsCustomFileInput.init();
    });
    $('#datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' })
    $('[data-mask]').inputmask()
</script>