@model IEnumerable<PhanLong.EF.Role>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <!-- Bootstrap4 Duallistbox -->
    <link rel="stylesheet" href="/Content/plugins/bootstrap4-duallistbox/bootstrap-duallistbox.min.css">
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Quản lý quyền</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
            <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <form action="/" method="post">
                    <input type="hidden" readonly name="UserId" value="@ViewBag.UserId" />
                    <div class="form-group">
                        <select class="duallistbox" name="selectroles[]" multiple="multiple">
                            @foreach (var item in Model)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-default btn-block">Thêm quyền</button>
                </form>
                
                <!-- /.form-group -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
</div>

@section js{
    <!-- Bootstrap4 Duallistbox -->
    <script src="/Content/plugins/bootstrap4-duallistbox/jquery.bootstrap-duallistbox.min.js"></script>
    <script>
        //Bootstrap Duallistbox
        var demo2 = $('.duallistbox').bootstrapDualListbox({
        });

        var demo1 = $('select[name="selectroles[]"]').bootstrapDualListbox();
    </script>

}