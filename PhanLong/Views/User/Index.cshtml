@model List<PhanLong.EF.User>
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card card-solid">
    <div class="card-header">
        <h5>
            <b>Danh sách tài khoản</b>
            @Html.ActionLink("Thêm tài khoản", "Create", null, new { @class = "btn btn-primary mb-1" })
        </h5>
    </div>
    <div class="card-body pb-0">
        <div class="row d-flex align-items-stretch">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch" id="row_@item.Id">
                    <div class="card bg-light">
                        <div class="card-header text-muted border-bottom-0">
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@item.Name</b></h2>
                                    <p class="text-muted text-sm"><b>Email: </b>  @item.Email </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span>Địa chỉ: @item.Address</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>Số điện thoại: @item.Telephone</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="/Content/dist/img/user2-160x160.jpg" alt="user-avatar" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                @Ajax.ActionLink("X", "Delete", new { @id = item.Id },
                                   new AjaxOptions
                                   {
                                       Confirm = "Bạn có chắc muốn xoá không ??",
                                       OnComplete = "$('#row_" + item.Id + "').remove()",
                                       HttpMethod = "Delete"
                                   }, new { @class = "btn btn-sm bg-teal" })
                                <a href="/User/Update/@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> Chỉnh sửa

                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        <nav aria-label="Contacts Page Navigation">
            <ul class="pagination justify-content-center m-0">
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">6</a></li>
                <li class="page-item"><a class="page-link" href="#">7</a></li>
                <li class="page-item"><a class="page-link" href="#">8</a></li>
            </ul>
        </nav>
    </div>
    <!-- /.card-footer -->
</div>

@section js{
    <script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>

}

